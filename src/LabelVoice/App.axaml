<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:LabelVoice"
             xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="LabelVoice.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Localization/AppResources.axaml"/>
                <ResourceInclude Source="/Localization/AppResources.zh-CN.axaml"/>
                <ResourceInclude Source="/Localization/AppResources.ja-JP.axaml"/>
                <ResourceInclude Source="/Localization/AppResources.zh-TW.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
	
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <!-- <FluentTheme Mode="Dark"/> -->
        <sty:FluentAvaloniaTheme/>
        <StyleInclude Source="/Styles/Fonts.Win.axaml"/>
        <StyleInclude Source="/Styles/Fonts.Linux.axaml"/>
        <StyleInclude Source="/Styles/Fonts.Mac.axaml"/>
    </Application.Styles>
</Application>
